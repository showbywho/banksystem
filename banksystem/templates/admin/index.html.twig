{% extends 'base.html.twig' %}
{% block body %}
<!--上方標題欄-->
<section class="content-header">
    <div class="container-fluid">
    <div class="row mb-2">
        <div class="col-sm-11">
            <h1>使用者列表</h1>
        </div>
        <div class="col-sm-1">
            <a class="btn btn-app bg-success">
                <i class="fas fa-users"></i> 創建
            </a>
        </div>
    </div>
    </div>
</section>
<!--上方標題欄-->

<!--主要內容區-->
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">使用者列表</h3>

                </div>
                <div class="card-body">
                    <table class="table table-bordered">
                        <thead>
                        <tr>
                            <th style="width: 10px">編號</th>
                            <th>帳號</th>
                            <th>暱稱</th>
                            <th>餘額</th>
                            <th>總存款</th>
                            <th>總提現</th>
                            <th>帳號創建時間</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for list in listArray %}
                                <tr>
                                    <td>{{list.id}}</td>
                                    <td>{{list.account}}</td>
                                    <td>{{list.nickName}}</td>
                                    <td><span class="badge bg-danger">{{list.balance}}</span></td>
                                    <td><span class="badge bg-success">{{list.totalDeposit}}</span></td>
                                    <td><span class="badge bg-warning">{{list.totalRefund}}</span></td>
                                    <td>{{list.createTime|date('Y/m/d H:i:s')}}</td>
                                </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                {# 分頁 #}
                <div class="card-footer clearfix">
                    <ul class="pagination pagination-sm m-0 float-right">
                        <li class="page-item"><a class="page-link" href="#">&laquo;</a></li>
                        <li class="page-item"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item"><a class="page-link" href="#">&raquo;</a></li>
                    </ul>
                </div>
                {# 分頁 #}
        </div>
    </div>
</section>
<!--主要內容區-->
{% endblock %}
